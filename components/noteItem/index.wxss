.note-item {
  box-sizing: border-box;
  padding: 30rpx;
  margin: 30rpx 0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}

.no-radio {
  width: 30rpx;
  height: 30rpx;
  border: 1px solid gray;
  border-radius: 50%;
  flex: 30rpx 0 0;
}

.no-delete {
  width: 30rpx;
  height: 30rpx;
  flex: 30rpx 0 0;
}

.no-radio .no-radio-cicle{
  width: 20rpx;
  height: 20rpx;
  padding: 8rpx;
  border-radius: 50%;
  background-color: gray;
  display: none
}

.no-radio.active .no-radio-cicle{
  display: block;
}

.no-content {
  flex: 1;
  margin-left: 20rpx;
}

.no-flower {
  flex: 70rpx 0 0;
  width: 70rpx;
  height: 70rpx;
  display: flex;
  align-items: center;
}

.no-flower-item {
  width: 60rpx;
  height: 60rpx;
  margin: 0 auto;
}
