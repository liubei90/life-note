page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.page-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.container-swiper {
  width: 100%;
  height: 100%;
  position: relative;
}

.container-swiper-item {
  width: 100%;
  height: 100%;
  position: relative;
}


/* 一句 */
.day-note {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  position: absolute;
  top: 0;
  /* top: -100%; */
  left: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.day-sentence {

}

.day-note-day {
  font-size: 16px;
  font-weight: 500;
}

.day-note-greetings {
  font-size: 26px;
  font-weight: 500;
}

/* 一章 */
.day-note-scroll {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 100%;
  /* top: 0; */
  left: 0;
}

.day-article {
  padding: 30rpx;
}

.day-note-empty {

}

.day-note-empty text {
  vertical-align: middle;
  font-size: 16px;
}

.day-note-empty image {
  width: 40rpx;
  height: 40rpx;
  vertical-align: middle;
}

.day-note-empty text.day-note-yiju {
  font-size: 32px;
  font-weight: bold;
  vertical-align: baseline;
}

.day-note-greetings,
.day-note-input,
.day-note-empty {
  margin-top: 30rpx;
}

.day-note-input input {
  width: 690rpx;
  padding: 10rpx;
  border-bottom: 1px solid gray;
}