page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.page-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.day-calendar {
  flex: auto 0 0;
}

.day-content {
  flex: 1;
}

.dc-swiper {
  width: 100%;
  height: 100%;
}


.day-add-note-panel {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
}

.day-add-note-field {
  position: absolute;
  right: 100%;
  top: 0;
  height: 100rpx;
  width: 0;
  background-color: gray;
}

.day-add-note-btn {
  width: 100rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  border-radius: 50rpx;
  font-size: 30px;
  background-color: dodgerblue;
  color: #fff;
}