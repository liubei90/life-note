page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}
.page-container {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
}

.day-calendar {
  flex: auto 0 0;
}

.day-content {
  flex: 1;
}

.dc-swiper {
  width: 100%;
  height: 100%;
}


.day-add-note-panel {
  position: fixed;
  bottom: 30rpx;
  right: 30rpx;
}

.day-add-note-field {
  position: absolute;
  right: 100%;
  bottom: 0;
  height: 100rpx;
  width: 0;
  border-bottom: 1px solid gray;
  /* background-color: gray; */
}

.day-add-note-field input {
  position: absolute;
  height: 90rpx;
  box-sizing: border-box;
  padding-bottom: 15rpx;
  width: 100%;
  bottom: 0;
  left: 0;
}

.day-add-note-btn {
  width: 100rpx;
  height: 100rpx;
  /* border: 1px solid gray; */
  border-radius: 50rpx;
  position: relative;
}

.day-add-note-btn-icon {
  width: 60rpx;
  height: 60rpx;
  margin-left: 20rpx;
  margin-top: 20rpx;
}

.dc-loading {
  text-align: center;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  color: #969696;
}

.dc-loading image {
  width: 100rpx;
  height: 100rpx;
}
